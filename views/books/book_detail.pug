extends layout

block content
    h1= book.title
    h2 Author: #{book.author}
    if book.genre
        p Genre: #{book.genre}
    p Year Published: #{book.year}
    a(class="button" href="/books/" + book.id + "/edit") Edit this entry
    a(class="button_d" href="/books/" + book.id + "/delete") Delete this entry
    a(class="button_d" href="/books/") home
