extends ../layout 
    
block content 
    h1 Books 
    body          
    form(action="/books/search" method="post")
        p
            input(type="input" class="search" name="query" placeholder="search")
            input(type="submit" class="search_btn" name="search" value="Search")
    p
        a(class='button' href="/books/new") Create New Book  

    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody 
            each book in books 
                tr
                    td
                        a(href="/books/" + book.id)= book.title
                    td= book.author
                    td= book.genre 
                    td= book.year
    p
        - if(pages)
            p Pages        
                - for(let i=1; i < pages ; i++)
                    a(href=`/books/page/${i}`)=`${i}`
                    
                            
