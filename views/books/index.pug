extends ../layout 

block content
    body        
    form(action="/books/search" method="post")
        p
            input(type="input" class="search" name="query" placeholder="search")
            input(type="submit" class="search_btn" name="search")
    p
        a(class='button' href="/books/new") Create New Book  
    
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody 
            each book in books ? books : []
                tr
                    td
                        a(href="/books/" + book.id)= book.title
                    td= book.author
                    td= book.genre 
                    td= book.year
    
