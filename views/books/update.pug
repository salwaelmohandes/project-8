extends ../layout 

block content
    body
    include errors

    form(action="/books/" + book.id, method="post")
        p
            label(for='title') Title
            input(name='title' type='text' id='title' value=book.title)
        p
            label(for='author') Author
            input#author(name='author' type='text' value=`${book.author}`)
        p
            label(for='genre') Genre
            input#genre(name='genre' type='text' value=`${book.genre}`)
        p
            label(for='year') Year
            input#year(name='year' type='text' value=`${book.year}`)
        p
            a.button(href="/books/" + book.id) Cancel
        p
            input(type='submit' value='Update Book') 
    form(action="/books/" + book.id + "/delete", onsubmit='return confirm("Are you sure you want to delete this book?")' method="post")
        p
            input(type='submit' value='Delete Book')
        p
            a.button(href='/books') Home